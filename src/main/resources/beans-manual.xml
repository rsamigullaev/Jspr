<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="postController" class="org.rus.jspr04.post.PostController">
        <constructor-arg name="service" ref="postService" />
    </bean>

    <bean id="postService" class="org.rus.jspr04.post.PostService">
        <constructor-arg name="repository" ref="postRepository" />
    </bean>

    <bean id="postRepository" class="org.rus.jspr04.post.PostRepositoryImpl">
        <constructor-arg name="db" ref="postInMemoryDB" />
    </bean>

    <bean id="postInMemoryDB" class="org.rus.jspr04.post.PostInMemoryDB"/>

</beans>